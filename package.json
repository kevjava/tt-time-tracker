{
  "name": "tt-time-tracker",
  "version": "1.0.0",
  "description": "Unix-philosophy CLI time tracker with retroactive logging and comprehensive reporting",
  "main": "dist/index.js",
  "bin": {
    "tt": "./dist/index.js",
    "tt-completion-helper": "./dist/cli/completion-helper.js"
  },
  "scripts": {
    "build": "tsc && cp src/db/schema.sql dist/db/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "ts-node src/index.ts",
    "prepare": "husky",
    "prepublishOnly": "npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tt-time-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/tt-time-tracker/issues"
  },
  "homepage": "https://github.com/yourusername/tt-time-tracker#readme",
  "keywords": [
    "time-tracker",
    "cli",
    "productivity",
    "logging",
    "time-management",
    "analytics",
    "reporting",
    "sqlite",
    "typescript"
  ],
  "author": "TT Time Tracker Contributors",
  "license": "MIT",
  "files": [
    "dist/",
    "completions/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@kevjava/churn-core": "file:../churn-core",
    "@kevjava/task-parser": "file:../task-parser",
    "@kevjava/tt-core": "file:../tt-core",
    "better-sqlite3": "^9.2.2",
    "chalk": "^5.3.0",
    "chrono-node": "^2.9.0",
    "commander": "^11.1.0",
    "date-fns": "^3.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
